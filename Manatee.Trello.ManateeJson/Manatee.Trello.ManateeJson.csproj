<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
    <Version>2.0.0</Version>
    <Description>JSON serialization implementation supported by Manatee.Json.</Description>
